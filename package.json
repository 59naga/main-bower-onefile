{
  "name": "onefile",
  "bin" : "onefile",
  "description": "Quick browser package downloader",
  "version": "0.3.0-alpha",

  "scripts": {
    "start": "jasminetea --watch --timeout 15000",
    "test": "jasminetea --cover --report --lint --timeout 15000",
    "posttest": "rm pkgs* && rm bower.json",
    
    "prepublish": "node -e \"if(process.env.TRAVIS){}else{process.exit(1)}\" && npm run compile || echo skip prepublish",
    "compile": "coffee --bare --compile index.coffee",
    "postcompile": "coffee --output lib --bare --compile src"
  },

  "dependencies": {
    "bower": "^1.4.1",
    "chalk": "^1.0.0",
    "commander": "^2.8.1",
    "gulp": "^3.9.0",
    "gulp-concat": "^2.5.2",
    "gulp-jsfy": "^0.1.5-rc.1",
    "pretty-bytes": "^2.0.1",
    "rimraf": "^2.4.0",
    "uglify-js": "^2.4.23"
  },
  "devDependencies": {
    "jasminetea": "^0.2.1"
  },
  
  "keywords": [
    "bower",
    "installer",
    "cli",
    "concat",
    "uglify",
    "js",
    "css"
  ],
  "author": "59naga <i59naga@icloud.com> (http://berabou.me/)",
  "repository": {
    "type": "git",
    "url": "https://github.com/59naga/onefile.git"
  },
  "bugs": {
    "url": "https://github.com/59naga/onefile/issues"
  },
  "homepage": "https://github.com/59naga/onefile"
}
