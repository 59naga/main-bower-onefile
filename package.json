{
  "name": "onefile",
  "bin" : "onefile",
  "main": "onefile.cup.js",
  "description": "Quick browser package downloader",
  "version": "0.2.0",

  "scripts": {
    "test": "jasminetea . -vct 15000",
    "posttest": "rm pkgs*",

    "help": "node onefile",
    
    "test_global": "npm link && NODE_PATH=`npm root -g` jasminetea . -vt 20000 && npm rm onefile -g",
    "coveralls": "coveralls < ./coverage/lcov.info && rm -rf coverage"
  },

  "dependencies": {
    "bower": "^1.3.12",
    "chalk": "^1.0.0",
    "coffee-script": "^1.9.1",
    "commander": "^2.6.0",
    "gulp": "^3.8.11",
    "gulp-concat": "^2.5.0",
    "gulp-jsfy": "^0.1.3",
    "gulp-sort": "^1.0.1",
    "node-module-all": "0.0.7",
    "pretty-bytes": "^1.0.3",
    "rimraf": "^2.2.8",
    "uglify-js": "^2.4.16"
  },
  "devDependencies": {
    "jasminetea": "^0.1.10",
    "coveralls": "^2.11.2"
  },
  
  "keywords": [
    "bower",
    "cli",
    "js",
    "css"
  ],
  "author": "59naga <i59naga@icloud.com> (http://berabou.me/)",
  "repository": {
    "type": "git",
    "url": "https://github.com/59naga/onefile.git"
  },
  "bugs": {
    "url": "https://github.com/59naga/onefile/issues"
  },
  "homepage": "https://github.com/59naga/onefile"
}
